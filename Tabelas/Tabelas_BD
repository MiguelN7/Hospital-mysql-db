## TABELAS NO BANCO

CREATE TABLE DEPARTAMENTO(
	IDDEPARTAMENTO INT PRIMARY KEY AUTO_INCREMENT,
	NomeDepartamento VARCHAR(30) NOT NULL
);

CREATE TABLE MEDICOS(
	IDMEDICO INT PRIMARY KEY AUTO_INCREMENT,
	NomeMedico VARCHAR(30) NOT NULL,
	Especialização varchar(30) NOT NULL,
	DepartamentoID INT 
);

CREATE TABLE PACIENTES(
	IDPACIENTE INT PRIMARY KEY AUTO_INCREMENT,
	NomePaciente VARCHAR(30),
	Aniversario VARCHAR(30),
	Telefone VARCHAR (15)
);

CREATE TABLE CONSULTAS(
	IDCONSULTA INT PRIMARY KEY AUTO_INCREMENT,
	MedicoID INT,
	PacienteID INT,
	DataConsulta DATETIME,
	Sintoma VARCHAR(30),
	Status ENUM ('Agendada', 'Concluida', 'Camcelada')
);

CREATE TABLE PRONTUARIOS(
	IDPRONTUARIO INT PRIMARY KEY AUTO_INCREMENT,
	PacienteID_Prontuario INT,
	Diagnostico VARCHAR (40) NOT NULL,
	Tratamento VARCHAR (50) NOT NULL,
	DataRegistro DATETIME
);

CREATE TABLE PRESCRICOES (
	IDPRESCRICAO INT PRIMARY KEY AUTO_INCREMENT,
	MedicoID_Prescricao INT,
	PacienteID_Prescricao INT,
	DataEmissao DATETIME  
);

CREATE TABLE MEDICAMENTOS(
	IDMEDICAMETO INT PRIMARY KEY AUTO_INCREMENT,
	NomeMedicamento VARCHAR (30) NOT NULL,
	Quantidade_Estoque INT,
	Preco FLOAT (10,2)
);

CREATE TABLE Medicamento_Prescricao(
	PrescricaoID INT,
	MedicamentoID INT,
	Quantidade INT NOT NULL
);


